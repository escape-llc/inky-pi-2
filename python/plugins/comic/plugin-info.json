{
	"id": "comic",
	"name": "Comic Plugin",
	"version": "0.0.1",
	"class": "Comic",
	"file": "comic.py",
	"module": "python.plugins.comic.comic",
	"description": "A comic downloader.",
	"disabled": false,
	"features": ["internet"],
	"settings": {
		"schema": {
			"properties": [
			]
		},
		"default": null
	},
	"instanceSettings": {
		"schema": {
			"lookups": {
			},
			"properties": [
				{
					"name": "comic",
					"type": "string",
					"required": true,
					"lookup": "comic",
					"default": "XKCD",
					"label": "Comic Source",
					"description": "Where to download comics.",
					"enum":[
						"XKCD",
						"Cyanide & Happiness",
						"Saturday Morning Breakfast Cereal",
						"The Perry Bible Fellowship",
						"Questionable Content",
						"Poorly Drawn Lines",
						"Dinosaur Comics",
						"webcomic name"
				]
				},
				{
					"name": "titleCaption",
					"type": "boolean",
					"required": false,
					"default": true,
					"label": "Show Caption",
					"description": "Display a caption."
				},
				{
					"name": "fontSize",
					"type": "number",
					"required": true,
					"default": 12,
					"label": "Font size",
					"description": "The caption font size."
				}
			]
		},
		"default": {
			"comic": "XKCD",
			"titleCaption": true,
			"fontSize": 12
		}
	}
}