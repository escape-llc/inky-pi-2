{
	"id": "wpotd",
	"name": "Wikipedia Picture-of-the-Day",
	"version": "0.0.1",
	"class": "Wpotd",
	"file": "wpotd.py",
	"module": "python.plugins.wpotd.wpotd",
	"description": "A Wikipedia PotD downloader.",
	"disabled": false,
	"settings": {
		"schema": {
			"properties": [
				{
					"name": "level",
					"type": "string",
					"required": true,
					"default": "INFO",
					"title": "Logging Level",
					"description": "Set the logging level for the debug plugin.",
					"enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
				}
			]
		},
		"default": {
			"level": "INFO"
		}
	},
	"instanceSettings": {
		"schema": {
			"lookups": {
			},
			"properties": [
				{
					"name": "titleCaption",
					"type": "boolean",
					"required": false,
					"default": true,
					"title": "Show Caption",
					"description": "Display a caption."
				},
				{
					"name": "fontSize",
					"type": "number",
					"required": true,
					"default": 12,
					"title": "Font size",
					"description": "The caption font size."
				},
				{
					"name": "slideshowMinutes",
					"type": "number",
					"required": true,
					"default": 15,
					"min": 1,
					"title": "Slideshow Minutes",
					"description": "Minutes per image."
				}
			]
		},
		"default": {
			"comic": "XKCD",
			"titleCaption": true,
			"fontSize": 12,
			"slideshow": true,
			"slideshowMinutes": 15
		}
	}
}